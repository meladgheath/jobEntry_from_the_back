generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  // url      = env("DATABASE_URL")
  url      = "file:./dev.db"
}

model accountNumber {
  id     Int    @id @default(autoincrement())
  number String
  name   String
  detail String
}

model management {
  id              Int            @id @default(autoincrement())
  code            String
  name            String
  type            String
  restrictions_re restrictions[]
  // store_transaction store_transactions[]
}

model restrictions {
  id             Int        @id @default(autoincrement())
  resID          String
  name           String
  account        String
  accountName    String     @default("")
  debit          Decimal    @default(0)
  credit         Decimal    @default(0)
  rest_date      DateTime   @default(now())
  managementID   Int
  management_rel management @relation(fields: [managementID], references: [id])
  status         Boolean
  tas            tas[]
  // management management @relation(fields: [managementID], references: [id] )
}

model users {
  username String @id
  name     String
  password String
}

model tas {
  id      Int          @id @default(autoincrement())
  total   Decimal
  value   Decimal
  res     Int
  res_rel restrictions @relation(fields: [res], references: [id])
}
